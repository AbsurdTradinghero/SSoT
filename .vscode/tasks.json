{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Current EA",
      "type": "shell",
      "command": "${workspaceFolder}\\build\\ide_exact_compile.ps1 \"${fileBasename}\"",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "mql5",
          "pattern": [
            {
              "regexp": "^(.+?)\\((\\d+)\\):\\s+(error|warning)\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "label": "Compile All Experts",
      "type": "shell",
      "command": "${workspaceFolder}\\build\\ide_exact_compile.ps1 \"Experts\\*.mq5\"",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "mql5",
          "pattern": [
            {
              "regexp": "^(.+?)\\((\\d+)\\):\\s+(error|warning)\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "label": "Launch Portable MT5",
      "type": "shell",
      "command": "${workspaceFolder}\\mt5\\terminal64.exe /portable",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
